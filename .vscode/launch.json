{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "PCOB-Dummy",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}\\PCOB-Dummy\\app.js"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Vmix-Handler",
            "skipFiles": [
                "<node_internals>/**"
            ],
            // "preLaunchTask": "tsc",
            "outFiles": ["${workspaceFolder}/Main/build/**/*.js"],
            "program": "${workspaceFolder}/Main/src/app.ts"
        },
        {
            "type": "chrome",
            "request": "launch",
            "name": "Client App",
            "url": "http://localhost:3000",
            "webRoot": "${workspaceFolder}/Client"
          }
    ]
}