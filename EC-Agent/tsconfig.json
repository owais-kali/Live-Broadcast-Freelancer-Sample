{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": ["es6", "ES2021.String", "es2018", "DOM"],
    "allowJs": true,
    "rootDir": "src",
    "baseUrl": "./src",
    "strict": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "paths": {
      "@/*": ["/*"],
    }
  },
  "include": ["src/*"],
  "exclude": ["public/*"]
}
