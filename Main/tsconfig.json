{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": ["es6", "ES2021.String", "es2018", "DOM"],
    "allowJs": true,
    "rootDir": "src",
    "baseUrl": "./src",
    "strict": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "paths": {
      "@configs/*": ["configs/*"],
      "@services/*": ["services/*"],
      "@Vmix/*": ["services/Vmix/*"],
      "@PCOB/*": ["services/PCOB/*"],
      "@sandbox/*": ["sandbox/*"],
    }
  },
  "include": ["src/*"],
  "exclude": ["public/*"]
}
